@model List<Category> 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Category</title>
</head>
<body>
    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped table-hover align-middle shadow-s mt-2">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(item => item.DisplayOrder))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
